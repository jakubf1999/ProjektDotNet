@model IEnumerable<Projekt.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Genres</h1>
<div>
    @await Component.InvokeAsync("GenreCount")
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Genre</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
