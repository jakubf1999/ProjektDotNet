@model IEnumerable<Projekt.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Accounts</h1>
<div>
    @await Component.InvokeAsync("AccountCount")
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Account</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                [Hidden]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FL)
            </td>
            <td>
                <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-info"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
