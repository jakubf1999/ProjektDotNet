@model Projekt.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Details </h1>

<div>
    <h4>Account (ID: @Html.DisplayFor(model => model.Id))</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            [Hidden]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FL)
        </dd>
    </dl>
    <div>
    @if(Model.Games.Any())
    {
            <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Gra</th>
                <th>Ocena</th>
            </tr>    
            </thead>
            <tbody>
            @foreach(var r in Model.Games)
            {
                <tr>
                    <td>@r.Name</td>
                    @if(r.Reviews.Any())
                    {
                           <td>@r.Reviews.FirstOrDefault().Score </td>     
                    }
                    else
                    {
                        <td></td>
                    }
                    
                </tr>   
            }
            </tbody>
        </table>
    }    
</div>
</div>
<div>
    <a asp-action="TakeReviews" asp-route-id="@Model?.Id" class="btn btn-primary" >Reviews</a> 
    <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
